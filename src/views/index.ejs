      <a href="/paid" class="category-chip <%= (typeof activeTag !== 'undefined' && activeTag === 'paid') ? 'active' : '' %>">付费视频</a>
      <a href="/vip" class="category-chip <%= (typeof activeTag !== 'undefined' && activeTag === 'vip') ? 'active' : '' %>">会员视频</a>
    </div>

    <!-- 视频网格 -->
    <div id="videoContainer">
