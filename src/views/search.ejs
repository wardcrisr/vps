<%- include('_helpers.ejs') %>
<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>搜索结果 - X福利姬</title>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <script src="https://cdn.bunny.net/player-js/latest/player.min.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      background: #f9f9f9;
      min-height: 100vh;
      font-family: 'Roboto', -apple-system, BlinkMacSystemFont, sans-serif;
      color: #0f0f0f;
    }
    
    /* YouTube风格导航栏 */
    .youtube-header {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 56px;
      background: #fff;
      z-index: 2100;
      border-bottom: 1px solid #e5e5e5;
      display: flex;
      align-items: center;
      padding: 0 16px;
    }
    
         .header-start {
       display: flex;
       align-items: center;
       gap: 16px;
       min-width: 120px;
       margin-left: 12px;
     }
     
     .logo {
       display: flex;
       align-items: center;
       text-decoration: none;
       color: #030303;
       font-size: 20px;
       font-weight: 700;
     }
     
     .logo-icon {
       height: 20px;
       width: auto;
       margin-right: 4px;
     }
    
    .header-center {
      flex: 1;
      max-width: 640px;
      margin: 0 auto;
      display: flex;
      align-items: center;
    }
    
    .search-container {
      flex: 1;
      display: flex;
      align-items: center;
      max-width: 540px;
    }
    
    .search-form {
      flex: 1;
      display: flex;
      height: 40px;
    }
    
    .search-input {
      flex: 1;
      border: 1px solid #ccc;
      border-right: none;
      padding: 0 16px;
      font-size: 14px;
      font-family: inherit;
      outline: none;
      background: #fff;
      border-top-left-radius: 20px;
      border-bottom-left-radius: 20px;
    }
    
    .search-input:focus {
      border-color: #1c62b9;
      box-shadow: inset 0 1px 2px rgba(27, 97, 183, 0.3);
    }
    
    .search-button {
      width: 64px;
      height: 40px;
      border: 1px solid #ccc;
      border-left: none;
      background: #f8f8f8;
      cursor: pointer;
      border-top-right-radius: 20px;
      border-bottom-right-radius: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.1s ease;
    }
    
    .search-button:hover {
      background: #f0f0f0;
    }
    
    .search-button i {
      color: #030303;
      font-size: 16px;
    }
    
    .header-end {
      display: flex;
      align-items: center;
      gap: 8px;
      min-width: 225px;
      justify-content: flex-end;
    }
    
    .header-button {
      padding: 8px 16px;
      border: 1px solid #065fd4;
      background: transparent;
      color: #065fd4;
      border-radius: 18px;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.1s ease;
      white-space: nowrap;
    }
    
    .header-button:hover {
      background: #e3f2fd;
      text-decoration: none;
      color: #065fd4;
    }
    
    .user-menu {
      position: relative;
    }
    
    .user-avatar {
      width: 32px;
      height: 32px;
      border-radius: 50%;
      background: #065fd4;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      font-size: 14px;
      font-weight: 500;
    }
    
    /* 主内容区域 */
    .main-content {
      margin-top: 56px;
      padding: 24px 24px 0;
      max-width: 1284px;
      margin-left: auto;
      margin-right: auto;
    }
    
    /* 搜索结果头部 */
    .search-results-header {
      margin-bottom: 24px;
      padding: 16px 0;
      border-bottom: 1px solid #e5e5e5;
    }
    
    .search-results-title {
      font-size: 20px;
      font-weight: 500;
      color: #0f0f0f;
      margin-bottom: 8px;
    }
    
    .search-results-count {
      font-size: 14px;
      color: #606060;
    }
    
    /* 视频网格 - 与首页相同 */
    .video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
      gap: 20px;
      margin-bottom: 40px;
    }
    
    @media (min-width: 1200px) {
      .video-grid {
        grid-template-columns: repeat(auto-fill, minmax(360px, 1fr));
        gap: 24px;
      }
    }
    
    @media (max-width: 768px) {
      .video-grid {
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 16px;
      }
      
      .main-content {
        padding: 24px 16px 0;
      }
      
      .youtube-header {
        padding: 0 12px;
      }
      
      .header-center {
        margin: 0 12px;
      }
      
      .search-input {
        font-size: 16px;
      }
    }
    
    @media (max-width: 480px) {
      .video-grid {
        grid-template-columns: 1fr;
        gap: 12px;
      }
      
      .main-content {
        padding: 24px 12px 0;
      }
    }
    
    /* 视频卡片样式 - 与首页相同 */
    .video-card {
      background: transparent;
      border: none;
      overflow: hidden;
      box-shadow: none;
      transition: transform 0.2s ease;
      cursor: pointer;
    }
    
    .video-card:hover {
      transform: translateY(-3px);
    }
    
    .video-thumbnail {
      position: relative;
      width: 100%;
      aspect-ratio: 16 / 9;
      background: #f0f0f0;
      overflow: hidden;
      border-radius: 12px;
    }
    
    .video-thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .video-thumbnail video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    
    .video-duration {
      position: absolute;
      bottom: 8px;
      right: 8px;
      background: rgba(0, 0, 0, 0.8);
      color: white;
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 0.75rem;
    }
    
    .premium-badge {
      position: absolute;
      top: 8px;
      right: 8px;
      background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
      color: white;
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 0.7rem;
      font-weight: 600;
    }
    
    .video-info {
      padding: 12px;
    }
    
    .video-title {
      font-size: 1rem;
      font-weight: 700;
      color: #0f0f0f;
      line-height: 1.4;
      margin-bottom: 6px;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      height: auto;
    }
    
    .uploader-info {
      margin-bottom: 8px;
    }
    
    .video-stats {
      display: flex;
      align-items: center;
      gap: 6px;
      color: #606060;
      font-size: 0.85rem;
    }
    
    .video-stats i {
      margin-right: 4px;
    }
    
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #9499a0;
      grid-column: 1 / -1;
    }
    
    .empty-state i {
      font-size: 3rem;
      margin-bottom: 16px;
      color: #d1d5db;
    }
    
    /* 视频播放器模态框 */
    .video-modal .modal-dialog {
      max-width: 1000px;
    }
    
    .video-modal .modal-body {
      padding: 0;
    }
    
    .video-modal video {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  <!-- YouTube风格顶部导航栏 -->
  <header class="youtube-header">
    <div class="header-start">
      <a href="/" class="logo">
        <img src="/assets/logo-black.jpg" alt="X" class="logo-icon" onerror="this.src='data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjQiIGhlaWdodD0iMjQiIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj4KPHBhdGggZD0iTTEyIDJMMTMuMDkgOC4yNkwyMSA5TDEzLjA5IDE1Ljc0TDEyIDIyTDEwLjkxIDE1Ljc0TDMgOUwxMC45MSA4LjI2TDEyIDJaIiBmaWxsPSIjMDAwIi8+Cjwvc3ZnPgo='; this.onerror=null;">
        福利姬
      </a>
    </div>
    
    <div class="header-center">
      <div class="search-container">
        <form class="search-form" action="/search" method="GET">
          <input type="text" class="search-input" placeholder="搜索" name="q" value="<%= query %>">
          <button type="submit" class="search-button">
            <i class="fas fa-search"></i>
          </button>
        </form>
      </div>
    </div>
    
    <div class="header-end">
      <a href="/" class="header-button">
        <i class="fas fa-home me-1"></i>返回首页
      </a>
    </div>
  </header>

  <!-- 主要内容区域 -->
  <main class="main-content">
    <!-- 搜索结果头部 -->
    <div class="search-results-header">
      <h1 class="search-results-title">搜索结果</h1>
      <p class="search-results-count">关键词: "<%= query %>" - 找到 <%= results.length %> 个结果</p>
    </div>

    <!-- 视频网格 -->
    <div class="video-grid">
      <% if (results.length > 0) { %>
        <% results.forEach(video => { %>
          <div class="video-card" onclick="location.href='/video/<%= video._id || video.id %>'">
            <div class="video-thumbnail">
              <img src="<%= video.previewUrl || '/api/placeholder/video-thumbnail' %>" alt="<%= video.title || video.name %>" onerror="this.src='/api/placeholder/video-thumbnail'">
              <div class="video-duration"><%= formatDuration(video.duration || 0) %></div>
              <% if (video.isPremiumOnly) { %>
                <div class="premium-badge">付费</div>
              <% } %>
            </div>
            <div class="video-info">
              <div class="video-title" title="<%= video.title || video.name %>">
                <%= video.title || video.name %>
              </div>
              <div class="uploader-info">
                <% 
                  const uploader = video.uploader || video.uploaderInfo || video.up || {};
                  const uploaderName = uploader.name || uploader.displayName || uploader.username || '匿名用户';
                %>
                <div style="color: #666; font-size: 0.8rem; font-weight: 500;">👤 <%= uploaderName %></div>
              </div>
                             <div class="video-stats">
                 <span><i class="fas fa-eye"></i><%= formatNumber(video.views || 0) %></span>
                 <span><i class="fas fa-clock"></i><%= formatRelativeTime(video.createdAt || video.uploadDate || new Date()) %></span>
               </div>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="empty-state">
          <i class="fas fa-search"></i>
          <h3>没有找到相关内容</h3>
          <p>尝试使用不同的关键词搜索</p>
        </div>
      <% } %>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // 视频预览动画功能
    document.addEventListener('DOMContentLoaded', () => {
      // 针对所有视频卡片执行预览替换
      document.querySelectorAll('.video-card').forEach(card => {
        const img = card.querySelector('.video-thumbnail img');
        if (!img) return;

        const videoSrc = img.src;
        
        // 检查是否为视频格式的预览
        if (videoSrc && /\.(mp4|webm)$/i.test(videoSrc)) {
          let video = null;
          
          // 鼠标悬停时播放预览
          card.addEventListener('mouseenter', () => {
            if (!video) {
              video = document.createElement('video');
              video.src = videoSrc;
              video.muted = true;
              video.loop = true;
              video.autoplay = true;
              video.playsInline = true;
              video.style.width = '100%';
              video.style.height = '100%';
              video.style.objectFit = 'cover';
            }
            
            if (img.parentNode && img.parentNode.contains(img)) {
              img.style.display = 'none';
              img.parentNode.appendChild(video);
            }
          });
          
          // 鼠标离开时恢复封面
          card.addEventListener('mouseleave', () => {
            if (video && video.parentNode) {
              video.parentNode.removeChild(video);
              img.style.display = 'block';
            }
          });
        }
      });
    });
  </script>
</body>
</html> 