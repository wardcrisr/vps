  <script>
    // è§†é¢‘é¢„è§ˆåŠ¨ç”»åŠŸèƒ½
    document.addEventListener('DOMContentLoaded', () => {
      // è‡ªåŠ¨åŠ è½½å¹¶æ’­æ”¾é¢„è§ˆåŠ¨ç”»ï¼Œæ— éœ€é¼ æ ‡æ‚¬åœ
      document.querySelectorAll('.video-card').forEach(card => {
        const img = card.querySelector('.video-thumbnail img');
        if (!img) return;

        const videoSrc = img.dataset.preview || '';

        if (videoSrc && /\.(mp4|webm)$/i.test(videoSrc)) {
          const video = document.createElement('video');
          video.src = videoSrc;
          video.muted = true;
          video.loop = true;
          video.autoplay = true;
          video.playsInline = true;
          video.style.width = '100%';
          video.style.height = '100%';
          video.style.objectFit = 'contain';
          video.style.background = 'transparent';
          video.style.backgroundColor = 'transparent';

          // ç­‰å¾…è§†é¢‘å¯æ’­æ”¾åå†éšè—å°é¢ï¼Œé¿å…å‡ºç°ç©ºç™½
          const showVideo = () => {
            img.style.display = 'none';
            video.style.display = 'block';
          };

          video.addEventListener('canplay', showVideo, { once: true });
          video.addEventListener('loadeddata', showVideo, { once: true });

          // å¦‚æœæ’­æ”¾å¤±è´¥ï¼Œåˆ™ä¿ç•™å°é¢å›¾
          video.addEventListener('error', () => {
            console.warn('Preview video failed to load', videoSrc);
            video.remove();
            img.style.display = 'block';
          }, { once: true });

          // ç«‹å³æ’å…¥ä½†ä¿æŒéšè—ç›´åˆ°canplay
          video.style.display = 'none';
          img.parentNode.appendChild(video);
          // å°è¯•æ’­æ”¾ï¼ˆæœ‰çš„æµè§ˆå™¨éœ€è¦æ˜¾å¼ï¼‰
          video.play().catch(() => {});
        }
      });
    });
  </script>
