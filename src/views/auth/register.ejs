<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>创建账户 - X福利姬</title>
    <link href="https://fonts.googleapis.com/css2?family=Google+Sans:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Google Sans', 'Helvetica Neue', Arial, sans-serif;
            background-color: #fff;
            color: #202124;
            line-height: 1.4;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        
        .container {
            max-width: 450px;
            width: 100%;
            padding: 20px;
        }
        
        .auth-card {
            background: #fff;
            border: 1px solid #dadce0;
            border-radius: 8px;
            padding: 48px 40px 36px;
            box-shadow: 0 2px 10px 0 rgba(0, 0, 0, 0.1);
        }
        
        .title-container {
            text-align: center;
            margin-bottom: 32px;
        }
        
        .title {
            font-size: 24px;
            font-weight: 400;
            margin-bottom: 8px;
            color: #202124;
        }
        
        .subtitle {
            font-size: 16px;
            color: #5f6368;
            margin-bottom: 24px;
        }
        
        .form-group {
            margin-bottom: 24px;
            position: relative;
        }
        
        .input-wrapper {
            position: relative;
        }
        
        .form-control {
            width: 100%;
            padding: 13px 16px;
            border: 1px solid #dadce0;
            border-radius: 4px;
            font-size: 16px;
            outline: none;
            transition: border-color 0.2s ease;
            background: transparent;
        }
        
        .form-control:focus {
            border-color: #1a73e8;
            border-width: 2px;
            padding: 12px 15px;
        }
        
        .form-control.error {
            border-color: #d93025;
        }
        
        .form-label {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: #5f6368;
            font-size: 16px;
            pointer-events: none;
            transition: all 0.2s ease;
            background: white;
            padding: 0 4px;
        }
        
        .form-control:focus + .form-label,
        .form-control:not(:placeholder-shown) + .form-label {
            top: 0;
            font-size: 12px;
            color: #1a73e8;
        }
        
        .form-control.error + .form-label {
            color: #d93025;
        }
        
        .help-text {
            font-size: 12px;
            color: #5f6368;
            margin-top: 4px;
        }
        
        .error-text {
            font-size: 12px;
            color: #d93025;
            margin-top: 4px;
            display: none;
        }
        
        .btn-next {
            background-color: #1a73e8;
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 4px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            float: right;
            transition: background-color 0.2s ease;
            min-width: 80px;
        }
        
        .btn-next:hover:not(:disabled) {
            background-color: #1557b0;
        }
        
        .btn-next:disabled {
            background-color: #94a3b8;
            cursor: not-allowed;
        }
        
        .footer {
            margin-top: 48px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .footer-left {
            display: flex;
            gap: 24px;
        }
        
        .footer-link {
            color: #1a73e8;
            text-decoration: none;
            font-size: 14px;
        }
        
        .footer-link:hover {
            text-decoration: underline;
        }
        
        .language-selector {
            color: #5f6368;
            font-size: 14px;
            cursor: pointer;
        }
        
        .alert {
            padding: 12px 16px;
            border-radius: 4px;
            margin-bottom: 24px;
            display: none;
        }
        
        .alert-success {
            background-color: #e8f5e8;
            color: #137333;
            border: 1px solid #c4e7c4;
        }
        
        .alert-danger {
            background-color: #fce8e6;
            color: #d93025;
            border: 1px solid #f4c2c2;
        }
        
        .clearfix::after {
            content: "";
            display: table;
            clear: both;
        }
        
        @media (max-width: 480px) {
            .auth-card {
                padding: 24px 20px;
            }
            
            .container {
                padding: 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="auth-card">
            <div class="title-container">
                <h1 class="title">创建您的账户</h1>
                <p class="subtitle">输入您的信息以创建X福利姬账户</p>
            </div>
            
                <div id="alertContainer"></div>
                
                <form id="registerForm">
                    <div class="form-group">
                    <div class="input-wrapper">
                            <input type="text" 
                                   class="form-control" 
                                   id="username" 
                                   name="username" 
                               placeholder=" "
                                   required>
                        <label class="form-label" for="username">用户名</label>
                    </div>
                    <div class="help-text">用户名将作为您的唯一标识</div>
                    </div>
                    
                    <div class="form-group">
                    <div class="input-wrapper">
                            <input type="email" 
                                   class="form-control" 
                                   id="email" 
                                   name="email" 
                               placeholder=" "
                                   required>
                        <label class="form-label" for="email">邮箱地址</label>
                    </div>
                    <div class="help-text">请输入您的邮箱地址</div>
                    </div>
                    
                    <div class="form-group">
                    <div class="input-wrapper">
                            <input type="password" 
                                   class="form-control" 
                                   id="password" 
                                   name="password" 
                               placeholder=" "
                                   required>
                        <label class="form-label" for="password">密码</label>
                        </div>
                    <div class="help-text">密码至少6位，建议包含字母和数字</div>
                    </div>
                    
                    <div class="form-group">
                    <div class="input-wrapper">
                            <input type="password" 
                                   class="form-control" 
                                   id="confirmPassword" 
                                   name="confirmPassword" 
                               placeholder=" "
                                   required>
                        <label class="form-label" for="confirmPassword">确认密码</label>
                    </div>
                    <div class="help-text">请再次输入您的密码</div>
                    </div>
                    
                <div class="clearfix">
                    <button type="submit" class="btn-next">
                        <span id="buttonText">创建账户</span>
                    </button>
                </div>
                </form>
                
            <div class="footer">
                <div class="footer-left">
                    <a href="/api/auth/login" class="footer-link">已有账户？登录</a>
                    <a href="/" class="footer-link">返回首页</a>
                </div>
                <div class="language-selector">
                    中文 (简体)
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('registerForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const alertContainer = document.getElementById('alertContainer');
            const submitBtn = e.target.querySelector('button[type="submit"]');
            const buttonText = document.getElementById('buttonText');
            const originalText = buttonText.textContent;
            
            // 验证密码确认
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            
            if (password !== confirmPassword) {
                showAlert('两次输入的密码不一致', 'danger');
                return;
            }
            
            // 显示加载状态
            buttonText.textContent = '创建中...';
            submitBtn.disabled = true;
            
            try {
                const formData = new FormData(e.target);
                const data = Object.fromEntries(formData);
                
                // 移除确认密码字段
                delete data.confirmPassword;
                
                const response = await fetch('/api/auth/register', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showAlert(result.message + '，正在跳转到登录页...', 'success');
                    
                    // 延迟跳转到登录页
                    setTimeout(() => {
                        window.location.href = '/api/auth/login';
                    }, 2000);
                } else {
                    throw new Error(result.message || '注册失败');
                }
            } catch (error) {
                showAlert(error.message, 'danger');
            } finally {
                // 恢复按钮状态
                buttonText.textContent = originalText;
                submitBtn.disabled = false;
            }
        });
        
        function showAlert(message, type) {
            const alertContainer = document.getElementById('alertContainer');
            alertContainer.innerHTML = `
                <div class="alert alert-${type}" style="display: block;">
                    ${message}
                </div>
            `;
            
            // 3秒后自动隐藏
            setTimeout(() => {
                const alert = alertContainer.querySelector('.alert');
                if (alert) {
                    alert.style.display = 'none';
                }
            }, 3000);
        }
    </script>
</body>
</html> 