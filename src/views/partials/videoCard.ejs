<%- include('../_helpers.ejs') %>

<%
function getDefaultCover() {
  return '/api/placeholder/video-thumbnail';
}
  // 头像功能已删除
%>

<div class="videocard">
  <!-- 视频封面区域 -->
  <a href="/video/<%= video.id %>" class="video-link">
    <div class="coverwrapper">
      <img 
        src="<%=
          (function() {
            if (!video.coverUrl || video.coverUrl.trim() === '') {
              return getDefaultCover();
            }
            if (video.coverUrl.startsWith('http') || video.coverUrl.startsWith('/')) {
              return video.coverUrl;
            }
            // 补全前导 '/'
            return '/' + video.coverUrl.replace(/^\/+/, '');
          })()
        %>" 
        alt="<%= video.title %>" 
        class="coverimg"
        loading="lazy"
        onerror="this.src='<%= getDefaultCover() %>'"
      >
      <!-- 时长显示 -->
      <span class="duration"><%= formatDuration(video.duration) %></span>
      
      <!-- 付费标识 -->
      <% if (video.isPremiumOnly) { %>
        <span class="premium-badge">付费</span>
      <% } %>
    </div>
  </a>

  <!-- 视频信息区域 -->
  <div class="meta">
    <!-- UP主信息 -->
    <div class="upinfo">
      <span class="up-icon">👤</span>
      <div class="video-details">
        <!-- 视频标题 -->
        <a href="/video/<%= video.id %>" class="videotitle" title="<%= video.title %>">
          <%= truncateText(video.title, 50) %>
        </a>
        
        <!-- UP主名称 -->
        <a href="/space/<%= video.up.uid %>" class="upname" title="<%= video.up.name %>">
          <%= truncateText(video.up.name || video.up.uid, 20) %>
        </a>
        
        <!-- 视频统计信息 -->
        <div class="video-stats">
          <span class="stat-item">
            <i class="fas fa-eye"></i>
            <%= formatNumber(video.views) %>
          </span>
          <span class="stat-separator">·</span>
          <span class="stat-item">
            <i class="fas fa-comment"></i>
            <%= formatNumber(video.danmakuCount) %>
          </span>
          <span class="stat-separator">·</span>
          <span class="videodate">
            <%= formatRelativeTime(video.createdAt) %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* B站风格视频卡片样式 */
.videocard {
  display: flex;
  flex-direction: column;
  background: transparent;
  border: none;
  box-shadow: none;
  transition: transform 0.2s ease;
  height: 100%;
}

.videocard:hover {
  transform: translateY(-3px);
}

/* 封面容器 */
.coverwrapper {
  position: relative;
  width: 100%;
  aspect-ratio: 16 / 9;
  overflow: hidden;
  background: #f9f9f9;
  border-radius: 12px;
}

.coverimg {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.videocard:hover .coverimg {
  transform: scale(1.05);
}

/* 时长标签 */
.duration {
  position: absolute;
  bottom: 4px;
  right: 4px;
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 2px 4px;
  border-radius: 2px;
  font-size: 12px;
  font-weight: 500;
  line-height: 1;
}

/* 付费标识 */
.premium-badge {
  position: absolute;
  top: 6px;
  right: 6px;
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  color: #fff;
  padding: 2px 6px;
  border-radius: 4px;
  font-size: 11px;
  font-weight: 600;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
}

/* 元信息区域 */
.meta {
  flex: 1;
  padding: 12px;
}

.upinfo {
  display: flex;
  align-items: flex-start;
  gap: 8px;
}

/* UP主图标 */
.up-icon {
  display: none;
}

.video-details {
  flex: 1;
  min-width: 0;
}

/* 视频标题 */
.videotitle {
  display: block;
  font-size: 16px;
  font-weight: 700;
  color: #0f0f0f;
  text-decoration: none;
  line-height: 1.4;
  margin-bottom: 6px;
  word-break: break-word;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.videotitle:hover {
  color: #065fd4;
}

/* UP主名称 */
.upname {
  display: block;
  font-size: 14px;
  color: #606060;
  text-decoration: none;
  margin-bottom: 4px;
  line-height: 1.2;
}

.upname:hover {
  color: #065fd4;
}

/* 统计信息 */
.video-stats {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 13px;
  color: #606060;
  line-height: 1;
}

.stat-item {
  display: flex;
  align-items: center;
  gap: 2px;
}

.stat-item i {
  font-size: 12px;
}

.stat-separator {
  color: #c9ccd0;
}

.videodate {
  color: #9499a0;
}

/* 链接样式重置 */
.video-link,
.up-link {
  text-decoration: none;
  color: inherit;
}

.video-link:hover,
.up-link:hover {
  text-decoration: none;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .videotitle {
    font-size: 14px;
  }
  .upname, .video-stats {
    font-size: 12px;
  }
}
</style> 