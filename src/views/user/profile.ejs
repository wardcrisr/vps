      font-size: 12px;
      color: #666;
      font-weight: 500;
    }
    
    .avatar-modal-buttons {
      display: flex;
      gap: 12px;
      justify-content: center;
    }
    
    .avatar-btn {
      padding: 10px 20px;
      border: none;
      border-radius: 8px;
      font-size: 14px;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.3s ease;
      min-width: 80px;
    }
    
    .avatar-btn-cancel {
      background: #f5f5f5;
      color: #666;
    }
    
    .avatar-btn-cancel:hover {
      background: #e0e0e0;
    }
    
    .avatar-btn-confirm {
      background: #4A90E2;
      color: white;
    }
    
    .avatar-btn-confirm:hover {
      background: #357abd;
    }
    
    .avatar-btn-confirm:disabled {
      background: #ccc;
      cursor: not-allowed;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @keyframes slideIn {
      from { 
        opacity: 0;
        transform: translate(-50%, -60%);
      }
      to { 
        opacity: 1;
        transform: translate(-50%, -50%);
