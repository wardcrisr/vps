  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  
  <script>
    let selectedAvatar = null;
    
    // 头像选择相关函数
    function openAvatarModal() {
      document.getElementById('avatarModal').style.display = 'block';
    }
    
    function closeAvatarModal() {
      document.getElementById('avatarModal').style.display = 'none';
      selectedAvatar = null;
      // 清除所有选中状态
      document.querySelectorAll('.avatar-option').forEach(option => {
        option.classList.remove('selected');
      });
      // 禁用确认按钮
      document.querySelector('.avatar-btn-confirm').disabled = true;
    }
    
    async function confirmAvatarSelection() {
      if (!selectedAvatar) {
        alert('请选择一个头像');
        return;
      }
      
      try {
        document.querySelector('.avatar-btn-confirm').disabled = true;
        document.querySelector('.avatar-btn-confirm').textContent = '保存中...';
        
        const response = await fetch('/api/user/update-avatar', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            avatarUrl: selectedAvatar
          })
        });
        
        if (!response.ok) {
          throw new Error(`HTTP error! status: ${response.status}`);
        }
        
        const data = await response.json();
        console.log('API响应:', data);
        
        if (data.code === 0) {
          // 更新页面上的头像显示
          const userAvatar = document.querySelector('.user-avatar');
          const existingImg = userAvatar.querySelector('img');
          const existingText = userAvatar.textContent;
          
          if (existingImg) {
            existingImg.src = selectedAvatar;
          } else {
            // 如果之前是显示用户名首字母，现在要显示图片
            userAvatar.innerHTML = `
              <img src="${selectedAvatar}" alt="用户头像">
              <div class="avatar-edit-overlay">
                <i class="fas fa-edit"></i>
              </div>
            `;
          }
          
          closeAvatarModal();
          alert('头像更新成功！');
        } else {
          alert('头像更新失败：' + (data.msg || '未知错误'));
        }
      } catch (error) {
        console.error('更新头像失败:', error);
        if (error.message && error.message.includes('Failed to fetch')) {
          alert('头像更新失败：网络连接错误，请检查网络连接');
        } else {
          alert('头像更新失败：' + (error.message || '请稍后重试'));
        }
      } finally {
        document.querySelector('.avatar-btn-confirm').disabled = false;
        document.querySelector('.avatar-btn-confirm').textContent = '确认';
      }
    }
    
    // 头像选项点击事件
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.avatar-option').forEach(option => {
        option.addEventListener('click', function() {
          // 移除其他选中状态
          document.querySelectorAll('.avatar-option').forEach(opt => opt.classList.remove('selected'));
          // 添加选中状态
          this.classList.add('selected');
          
          selectedAvatar = this.dataset.avatar;
          
          // 启用确认按钮
          document.querySelector('.avatar-btn-confirm').disabled = false;
        });
      });
      
      // 点击模态框外部关闭
      document.getElementById('avatarModal').addEventListener('click', function(e) {
        if (e.target === this) {
          closeAvatarModal();
        }
      });
    });
    
    // 刷新用户金币数量
    async function refreshUserCoins() {
      try {
        const response = await fetch('/api/user/coins');
        const result = await response.json();
        
        if (result.code === 0) {
          const coinsElement = document.querySelector('.user-coins span');
          if (coinsElement) {
            coinsElement.textContent = `金币：${result.data.coins}`;
          }
        }
      } catch (error) {
        console.error('刷新金币数量失败:', error);
      }
    }
    
    // 页面加载时刷新金币数量
    document.addEventListener('DOMContentLoaded', function() {
      refreshUserCoins();
    });
    
    // 开通月度会员功能（使用和30金币充值完全相同的逻辑）
    function openMonthlyVip() {
      console.log('=== 开通月度会员 ===');
      
      // 使用30金币对应的SKU ID
      const monthlyVipSkuId = '<%= typeof skuIds !== "undefined" && skuIds ? skuIds[30] || "" : "" %>';
      const amount = 30; // 月度会员对应30金币
      
      console.log('月度会员参数:', { amount, skuId: monthlyVipSkuId });
      
      if (!monthlyVipSkuId) {
        alert('系统配置错误，请联系客服');
        return;
      }
      
      // 直接调用金币充值的逻辑
      directRecharge(amount, monthlyVipSkuId);
    }
    
    // 直接充值功能
    function directRecharge(amount, skuId) {
      if(!amount || amount <= 0) {
        alert('请选择有效金额');
        return;
      }
      
      if(!skuId) {
        alert('系统配置错误，请联系客服');
        return;
      }
      
      // 显示自定义联系方式输入模态框
      showContactModal(amount, skuId);
    }

    // 显示联系方式输入模态框
    function showContactModal(amount, skuId) {
      const modal = document.createElement('div');
      modal.id = 'contactInputModal';
      modal.style.cssText = `
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
      `;
      
      modal.innerHTML = `
        <div style="
          background: white;
          padding: 30px;
          border-radius: 10px;
          width: 90%;
          max-width: 400px;
          text-align: center;
          box-shadow: 0 4px 20px rgba(0,0,0,0.3);
        ">
          <h3 style="margin-bottom: 20px; color: #333;">充值信息确认</h3>
          <p style="margin-bottom: 20px; line-height: 1.6; color: #666;">
            请输入QQ/邮箱用于后续查询订单，<br>
            <span style="color: red; font-weight: bold;">点击确定前请关闭VPN</span>
          </p>
          <input type="text" id="contactInput" placeholder="请输入QQ号或邮箱地址" style="
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 16px;
            box-sizing: border-box;
          ">
          <div style="display: flex; gap: 10px;">
            <button onclick="cancelContactInput()" style="
              flex: 1;
              padding: 12px;
              background: #f5f5f5;
              border: none;
              border-radius: 5px;
              font-size: 16px;
              cursor: pointer;
            ">取消</button>
            <button onclick="confirmContactInput(${amount}, '${skuId}')" style="
              flex: 1;
              padding: 12px;
              background: #007bff;
              color: white;
              border: none;
              border-radius: 5px;
              font-size: 16px;
              cursor: pointer;
            ">确定</button>
          </div>
        </div>
      `;
      
      document.body.appendChild(modal);
      
      // 自动聚焦到输入框
      setTimeout(() => {
        document.getElementById('contactInput').focus();
      }, 100);
      
      // 按ESC键关闭
      modal.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          cancelContactInput();
        }
      });
      
      // 点击背景关闭
      modal.addEventListener('click', function(e) {
        if (e.target === modal) {
          cancelContactInput();
        }
      });
    }

    // 取消联系方式输入
    function cancelContactInput() {
      const modal = document.getElementById('contactInputModal');
      if (modal) {
        document.body.removeChild(modal);
      }
    }

    // 确认联系方式输入
    function confirmContactInput(amount, skuId) {
      const contactInfo = document.getElementById('contactInput').value.trim();
      if (!contactInfo) {
        alert('请输入联系方式');
        return;
      }
      
      // 关闭模态框
      cancelContactInput();
      
      // 调用充值接口
      topUp(amount, contactInfo, skuId);
    }

    // 充值功能
    async function topUp(amountYuan, contactInfo, skuId) {
      try {
        const { code, payUrl, orderId, msg, orderType } = await fetch('/api/idatariver/createorder', {
          method:'POST',
          headers:{ 'Content-Type':'application/json' },
          body: JSON.stringify({ amount: Math.round(amountYuan*100), contactInfo, skuId })
        }).then(r=>r.json());

        if(code !== 0) {
          alert(msg || '系统繁忙，请稍后重试');
          return;
        }

        if(!payUrl) {
          alert('未返回支付链接');
          return;
        }

        // 记录订单信息供支付完成后处理
        if(orderId) {
          sessionStorage.setItem('lastOrderId', orderId);
          sessionStorage.setItem('orderType', orderType || 'coin');
          sessionStorage.setItem('coinAmount', amountYuan.toString());
        }

        // 跳转到收银台
        window.location.href = payUrl;
      } catch(e) { 
        console.error('topUp error',e); 
        alert('网络错误'); 
      }
    }

    // 检查支付状态并更新金币
    async function checkPaymentStatus(orderId, coinAmount) {
      try {
        const response = await fetch('/api/idatariver/checkpayment', {
          method: 'POST',
          headers: { 
            'Content-Type': 'application/json',
            'Authorization': localStorage.authToken ? 'Bearer ' + localStorage.authToken : ''
          },
          credentials: 'include',
          body: JSON.stringify({ 
            orderId, 
            orderType: 'coin',
            coinAmount: parseInt(coinAmount)
          })
        });

        const result = await response.json();
        
        if (result.code === 0) {
          alert(`充值成功！您已获得 ${result.rechargeAmount} 金币，当前余额：${result.coins} 金币`);
          // 刷新页面以显示最新余额
          location.reload();
        } else {
          console.log('支付状态检查:', result.msg);
        }
      } catch (error) {
        console.error('检查支付状态失败:', error);
      }
    }

    // 页面加载时检查是否有待处理的订单
    window.addEventListener('load', function() {
      const orderId = sessionStorage.getItem('lastOrderId');
      const orderType = sessionStorage.getItem('orderType');
      const coinAmount = sessionStorage.getItem('coinAmount');
      
      if (orderId && orderType === 'coin' && coinAmount) {
        // 延迟3秒后检查支付状态，给支付系统一些时间处理
        setTimeout(() => {
          checkPaymentStatus(orderId, coinAmount);
          // 清除存储的订单信息
          sessionStorage.removeItem('lastOrderId');
          sessionStorage.removeItem('orderType'); 
          sessionStorage.removeItem('coinAmount');
        }, 3000);
      }
    });
  </script>

